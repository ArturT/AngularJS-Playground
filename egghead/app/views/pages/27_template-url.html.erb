<div ng-app="app27">
  <!-- make sure to include it somewhere inside of module so that it gets loaded into that module template cache -->
  <script type="text/ng-template" id="zippy.html">
    <div>
      <h3 ng-click="toggleContent()">{{title}}</h3>
      <div ng-show="isVisibleContent" ng-transclude></div>
    </div>
  </script>

  Title: <input type="text" ng-model="model.title" />
  Content: <input type="text" ng-model="model.content" />

  <zippy title="{{model.title}}">
    The content is: {{model.content}}
  </zippy>
</div>
