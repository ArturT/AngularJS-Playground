<div ng-app="app51" ng-controller="AppCtrl as app">
  <form>
    <input type="text" ng-model="app.contactCopy.firstName" />
    <button class="btn" ng-click="app.saveContact()">Save</button>
  </form>

  <table class="table table-striped">
    <thead>
      <tr>
        <th>First</th>
        <th>Last</th>
        <th>Phone</th>
      </tr>
    </thead>
    <tbody>
      <tr ng-repeat="contact in app.contacts" ng-click="app.selectContact(contact)">
        <td>{{contact.firstName}}</td>
        <td>{{contact.lastName}}</td>
        <td>{{contact.phone}}</td>
      </tr>
    </tbody>
  </table>
</div>
