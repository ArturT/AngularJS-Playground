<div ng-app="myApp8">

  <div ng-controller="ctrls8.AvengersCtrl">

    <form class="form-horizontal">
      <div class="control-group">
        <label class="control-label">Search by text in row:</label>
        <div class="controls">
          <input type="text" ng-model="searchText" />
        </div>
      </div>
    </form>

    <table class="table table-striped">
      <tr>
        <th>Actor</th>
        <th>Character</th>
      </tr>
      <tr ng-repeat="actor in avengers.cast | filter:searchText">
        <td>{{actor.name}}</td>
        <td>{{actor.character}}</td>
      </tr>
    </table>

  </div>

</div>
