<h1>Raffler</h1>

<div ng-controller="RafflerCtrl">
  <form class="form-horizontal" ng-submit="addEntry()">
    <input type="text" ng-model="newEntry.name" />
    <input type="submit" value="Add" class="btn" />
  </form>

  <ul>
    <li ng-repeat="entry in entries">
      {{entry.name}}
      <span class="badge" ng-show="entry.winner" ng-class="{'badge-success': entry == lastWinner}">WINNER</span>
    </li>
  </ul>

  <button class="btn btn-success" ng-click="drawWinner()">Draw Winner</button>
</div>
